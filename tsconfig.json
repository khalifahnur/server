{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",  // output files to 'dist'
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./types","./node_modules/@types"]
  },
  "include": ["controllers/**/**/*.ts","controllers/**/*.ts","**/*.ts","middleware/*.ts"],
  "exclude": ["dist"]
}
